using System;

class Program
{
    static void Main()
    {
        // Inicializa um vetor N com 20 elementos
        int[] N = new int[20];

        // Lê os 20 elementos do vetor
        for (int i = 0; i < 20; i++)
        {
            Console.Write("Digite o valor para a posição {0}: ", i);
            N[i] = int.Parse(Console.ReadLine());
        }

        // Inicializa as variáveis para armazenar o menor valor e sua posição
        int menorValor = N[0];
        int posicaoMenorValor = 0;

        // Percorre o vetor para encontrar o menor valor e sua posição
        for (int i = 1; i < N.Length; i++)
        {
            if (N[i] < menorValor)
            {
                menorValor = N[i];
                posicaoMenorValor = i;
            }
        }

        // Exibe o menor valor e sua posição
        Console.WriteLine("O menor elemento de N é {0} e sua posição dentro do vetor é: {1}", menorValor, posicaoMenorValor);
    }
}
